{
  "name": "sleek",
  "productName": "sleek",
  "version": "0.0.1",
  "description": "A simple and sleek app to manage a todo.txt file.",
  "synopsis": "A simple and sleek app to manage a todo.txt file.",
  "category": "ProjectManagement",
  "keywords": [
    "todo.txt",
    "todo",
    "productivity",
    "tasks"
  ],
  "author": "Robin Ahle <mail@robbfolio.de>",
  "copyright": "Copyright Â© 2020 ${author}",
  "license": "MIT",
  "repository": "https://github.com/ransome1/sleek/",
  "icon": "src/img/512x512.png",
  "build": {
    "appId": "com.electron.sleek",
    "linux": {
      "icon": "src/img/512x512.png",
      "category": "ProjectManagement",
      "target": [
        {
          "target": "snap",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "appImage"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "portable"
        }
      ],
      "icon": "src/img/512x512.ico"
    }
  },
  "snap": {
    "confinement": "strict",
    "grade": "devel"
  },
  "publish": {
    "provider": "snapStore",
    "channels": [
      "edge"
    ]
  },
  "main": "src/index.js",
  "buildResources": "src",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -wl --publish never"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "hyperlink-parser": "0.0.1-alpha.2"
  },
  "devDependencies": {
    "electron": "10.1.3",
    "electron-builder": "^22.9.1"
  }
}
